@model IEnumerable<CinemaClient.Domain.Spectator>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Nome
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BirthDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var spectator in Model) {
        <tr>
            <td>
                @spectator.FullName()
            </td>
            <td>
                @spectator.BirthDate.ToShortDateString()
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@spectator.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@spectator.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@spectator.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
